/* Line CSS  */
.horizontal_line{
  background-color: #ffc81c;
  width: 80px;
  height: 2px;
  display: inline-block;
  vertical-align: middle;
  margin-left: 10px;
}

.vertical_line{
  background-color: #ffc81c;
  width: 2px;
  height: 80px;
  display: inline-block;
  vertical-align: middle;
  margin-left: 0px;
}

.button {
  .buttons_icon{
    width: 30px;
    height: 17px;
    margin-left: 18px;
    position: relative;
    top: -2px;
    svg{
      fill: #ffc81c;
      width: 100%;
      height: 100%;
    }
  }
}

/* ====== Sections CSS ===== */
/* Navgition Hover Effect */
.header-wrapper {
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 100%);
  position: fixed;
  z-index: 99;
  border: none;
  top: 0;
  left: 0;
  right: 0;
  .header__inline-menu {
    position: relative;
/*     right: -25px; */
    ul li{
      margin: 0 30px;
      a {
        padding: 12px 0; 
        position: relative;
        color: #fff;
        text-transform: uppercase;
        font-family: 'Haettenschweiler';
        font-size: 26px;

        span{
          position: relative;
          z-index: 2;
        }
      }
      &:last-child{
        margin: 0 0 0 30px;
        display: flex;
    	align-items: center;
        a{
          padding: 5px 24px;
          border: 1px solid #FFFFFF;
          width: 140px;
          justify-content: center;
        }
      }
    }
  }
  .header__icons {
    display: none;
    .header__icon{
      color: #fff;
    }
  }
}