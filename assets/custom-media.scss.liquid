body{
  overflow-x: hidden;
}
.header{
  padding-top: 15px;
  padding-bottom: 15px;
}
.swipeinner {
    height: 600px;
    background-size: cover;
    width: 100%;
}
.swiper {
    width: 100%;
    height: 100%;
}
.swiper-container {
  width: 100%;
  height: calc(100% - 5%);
  display: flex;
  align-items: center;
}

.swiper-slide {
  text-align: left;
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: left;
  -ms-flex-align: left;
  -webkit-align-items: left;
  align-items: left;
  flex-direction: column;
}

.swiper-container-horizontal>.swiper-scrollbar {
  position: absolute;
  bottom: 48px;
  z-index: 50;
  height: 12px;
  width: 800px;
  left: 5%;
  right: auto;
  margin: 0 auto;
  background-color: #fff;
  border: 1px solid #000;
  z-index: 1;
}

.hrcontainer {
  overflow: hidden;
  width: 100px;
  height: 12px;
  margin-top: 25px;
  margin-bottom: 50px;
  position: relative;
}

.swipeinner {
  overflow: hidden;
  max-width: 100%;
  margin-left: 0;
  margin-right: 0;
  height: 100vh;
  background-repeat: no-repeat;
  background-size: cover;
}

.swiper-pagination,
.swiper-scrollbar {
  animation-duration: 1s !important;
  animation-delay: 0.25s !important;
}

.swiper-scrollbar-drag,
.swiper-scrollbar {
  border-radius: 0px;
}
.swiper-scrollbar, .swiper-scrollbar-drag{
  display: inherit !important;
}
.content {
  position: absolute;
  max-width: 780px;
  margin: 0;
  left: 5%;
  right: 0;
  bottom: 60px;
}
.content h2 {
  display: flex;
  align-items: start;
  padding: 10px 0px 10px 18px;
  margin: 0;
  font-size: 49px;
  line-height: 0.9;
  background-color: #fff;
  border: 1px solid #000;
  width: 100%;
  visibility: visible !important;
  text-transform: uppercase;
  opacity: 0;
  transition-delay: 0.3s !important;
  -webkit-transition: all 0.5s ease-in-out;
  -moz-transition: all 0.5s ease-in-out;
  -o-transition: all 0.5s ease-in-out;
  transition: all 0.5s ease-in-out;
}
.content h2 span {
  font-size: 36px;
  line-height: 1.2;
  text-transform: uppercase;
  float: right;
  padding: 0 20px 0 15px;
  margin: 0px 40px 0 0 ;
}
.content h2 span p {
  font-size: 17px;
  color: #000;
  line-height: 20px;
  margin: 0;
  font-family: 'Roboto';
}
.swiper-slide-active h2 {
  opacity: 1;
}
.content h2 a {
  position: static;
  border: 0;
  width: 30px;
  height: 30px;
  display: inline-block;
}
.content h2 a img {
  display: inline-block;
  max-width: 20px;
  height: 20px;
  position: absolute;
  border: 1px solid #000;
  padding: 5px 5px;
  top: 0;
  right: -20px;
}
